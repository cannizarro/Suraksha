    android:id="@+id/myListLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".CameraListActivity">

    <TextView
        android:id="@+id/list_header"
        android:layout_width="match_parent"
